DROP TABLE INSSET.DEPARTMENT ;


CREATE TABLE "INSSET".DEPARTMENT(
DEPARTMENTID BIGINT NOT NULL GENERATED ALWAYS AS IDENTITY,
DEPARTMENTNAME	 VARCHAR(50),
DEPARTMENTADDRESS VARCHAR(100),
DEPARTMENTCODE VARCHAR(50)
);
		
		ALTER TABLE "INSSET  "."DEPARTMENT" 
	ADD CONSTRAINT "DEPARTMENT_PK" PRIMARY KEY
		("DEPARTMENTID") ;


GRANT SELECT ON "INSSET"."DEPARTMENT" TO GROUP "CHQFTMUSR";
GRANT SELECT, INSERT, UPDATE, DELETE ON "INSSET"."DEPARTMENT" TO GROUP "CHQFTMAPP";
GRANT CONTROL ON TABLE "INSSET"."DEPARTMENT" TO USER "DB2INST1";

COMMIT WORK;

GRANT CONTROL ON TABLE "INSSET  "."DEPARTMENT" TO USER "DB2INST1"  ;


